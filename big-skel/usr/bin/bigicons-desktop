#!/bin/sh


CONTADOR=0
while [  $CONTADOR -lt 120 ]; do

    if [ -e "$HOME/.config/user-dirs.dirs" ]; then
        CONTADOR=120
    fi
    let CONTADOR=CONTADOR+1; 
done




. ~/.config/user-dirs.dirs

mkdir -p "$XDG_DESKTOP_DIR"

echo '[Desktop Entry]
Name[pt_BR]=Lixeira
Name=Trash
Exec=bigtrash
Icon=user-trash-full
Type=Application' > "$XDG_DESKTOP_DIR/trash.desktop"
chmod +x "$XDG_DESKTOP_DIR/trash.desktop"


echo '[Desktop Entry]
Name=My files
Name[pt]=Meus arquivos
Exec=bighome
Icon=system-file-manager
Type=Application' > "$XDG_DESKTOP_DIR/home.desktop"
chmod +x "$XDG_DESKTOP_DIR/home.desktop"

if [ -e "/rofs" ]; then
    cp -f "/usr/share/applications/calamares.desktop" "$XDG_DESKTOP_DIR/calamares.desktop"
    chmod +x "$XDG_DESKTOP_DIR/calamares.desktop"
fi

rm -f ~/.config/autostart/icons.desktop
